  "spacing": 0,
  "height": 32,
  "margin-top": 6,
  "margin-bottom": 6,
  "margin-left": 10,
  "margin-right": 10,
  
  "modules-left": ["custom/omarchy", "hyprland/workspaces"],
  "modules-center": ["clock", "custom/update", "custom/voxtype", "custom/weather", "custom/screenrecording-indicator"],
