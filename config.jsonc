{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 32,
  "margin-top": 6,
  "margin-bottom": 6,
  "margin-left": 10,
  "margin-right": 10,

  "modules-left": [
    "custom/omarchy", 
    "hyprland/workspaces", 
    "custom/net-speed"
  ],
  "modules-center": [
    "clock", 
    "custom/update", 
    "custom/voxtype", 
    "custom/screenrecording-indicator"
  ],
  "modules-right": [
    "group/tray-expander", 
    "network",
    "bluetooth",  
    "pulseaudio", 
    "temperature", 
    "memory", 
    "disk", 
    "battery"
  ],

    "custom/omarchy": {
    "format": "<span font='omarchy'>\ue900</span>", // Add slash to deactivate omarchy icon
    // "format": "Û∞£á", (Delete slash to use arch icon)
    "on-click": "omarchy-menu",
    "on-click-right": "xdg-terminal-exec",
    "tooltip-format": "Omarchy Menu\n\nSuper + Alt + Space"
  },

    "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{icon}",
    "active-only": false,
    "all-outputs": false,
    "sort-by-number": true,
    "persistent-workspaces": {
      "1": [], "2": [], "3": [], "4": [], "5": []
    },
    "format-icons": {
      "1": "<span color='#ff0000' >Û∞ä†</span>",  // Blinky ‚Äì red
      "2": "<span color='#ffb8ff' >Û∞ä†</span>",  // Pinky ‚Äì pink
      "3": "<span color='#00ffff' >Û∞ä†</span>",  // Inky ‚Äì cyan
      "4": "<span color='#ffb852' >Û∞ä†</span>",  // Clyde ‚Äì orange
      "5": "<span color='#d51aff' >Û∞ä†</span>",  // Sue ‚Äì violet
      "6": "<span color='#8eae8c' >Û∞ä†</span>",  // Funky - dark green
      "7": "<span color='#ffff00' >Û∞ä†</span>",  // Hungry - Yellow
      "8": "<span color='#ffffff' >Û∞ä†</span>",  // Spooky - white
      "9": "<span color='#917a75' >Û∞ä†</span>",  // Spunky - grey
      "10": "<span color='#dcd226' >Û∞ä†</span>",  // Zippy - lime
      "active": "<span color='#ffff00' font='20'>ú±≠</span>",  // yellow Pacman
      "default": "Ó©±"
    }
  },

    "custom/net-speed": {
    "exec": "~/.config/waybar/scripts/net-speed.sh",
    "interval": 2,
    "tooltip": false
  },

    "clock": {
    "format": "{:L%A %H:%M}", 
    "tooltip-format": "<big>{:L%B %Y}</big>\n<tt><small>{calendar}</small></tt>"
  },

    "custom/update": {
    "format": "ÔÄ°",
    "exec": "omarchy-update-available",
    "on-click": "omarchy-launch-floating-terminal-with-presentation omarchy-update",
    "tooltip-format": "Omarchy update available",
    "signal": 7,
    "interval": 21600
  },

 "custom/voxtype": {
    "exec": "omarchy-voxtype-status",
    "return-type": "json",
    "format": "{icon}",
    "format-icons": {
      "idle": "",
      "recording": "Û∞ç¨",
      "transcribing": "Û∞îü"
    },
    "tooltip": true,
    "on-click-right": "omarchy-voxtype-config",
    "on-click": "omarchy-voxtype-model"
  },

  "custom/screenrecording-indicator": {
    "on-click": "omarchy-cmd-screenrecord",
    "exec": "$OMARCHY_PATH/default/waybar/indicators/screen-recording.sh",
    "signal": 8,
    "return-type": "json"
  },

  "group/tray-expander": {
    "orientation": "inherit",
    "drawer": { "transition-duration": 600, "children-class": "tray-group-item" },
    "modules": ["custom/expand-icon", "tray"]
  },

  "network": {
    "format-wifi": "{icon}",
    "format-ethernet": "Û∞ÄÇ",
    "format-disconnected": "Û∞§Æ",
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
    "on-click": "omarchy-launch-wifi",
    "tooltip-format": "{essid} ({frequency} GHz)\n‚á£{bandwidthDownBytes}  ‚á°{bandwidthUpBytes}"
  },

  "bluetooth": {
    "format": "Ôäî",
    "format-off": "Û∞Ç≤ Off",
    "format-connected": "Û∞Ç±",
    "format-disabled": "Û∞Ç≤",
    "tooltip-format": "Devices connected: {num_connections}",
    "on-click": "omarchy-launch-bluetooth"
  },

   "pulseaudio": {
    "format": "{icon}",
    "on-click": "omarchy-launch-audio",
    "on-click-right": "pamixer -t",
    "tooltip-format": "Playing at {volume}%",
    "format-muted": "Óª®",
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    }
  },

  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon7/temp1_input",
    "critical-threshold": 80,
    "format": "<span color='#e78a4e'>Ôãõ {temperatureC}¬∞C</span>",
    "format-critical": "<span color='#ea6962'>Ôãõ {temperatureC}¬∞C</span>",
    "on-click": "ghostty -e btop"
  },
  
  "memory": {
    "format": "<span color='#a9b665'>Ôî∏ {percentage}%</span>",
    "on-click": "alacritty -e btop"
  },

  "disk": {
    "interval": 30,
    "format": "<span color='#7daea3'>Û∞ãä {percentage_used}%</span>",
    "path": "/",
    "on-click": "baobab"
  },

  "battery": {
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% {icon}",
    "format-icons": {
      "charging": ["Û∞¢ú", "Û∞ÇÜ", "Û∞Çá", "Û∞Çà", "Û∞¢ù", "Û∞Çâ", "Û∞¢û", "Û∞Çä", "Û∞Çã", "Û∞ÇÖ"],
      "default": ["Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]  
    },
    "format-full": "Ôá¶",
    "tooltip-format-discharging": "{power:>1.0f}W‚Üì {capacity}%",
    "tooltip-format-charging": "{power:>1.0f}W‚Üë {capacity}%",
    "interval": 5,
    "on-click": "omarchy-menu power",
    "states": {
      "warning": 30,
      "critical": 15
    }
  }
}